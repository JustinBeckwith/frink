<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark"
		   width="100%"  xmlns:mx="library://ns.adobe.com/flex/mx"  backgroundAlpha="0.0">
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var title : String;
			
			[Bindable]
			public var icon_normal : Object;
			
			[Bindable]
			public var icon_selected : Object;
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="2">
		<s:fill>
			<s:SolidColor color="0x000000" alpha.selected="0.25" alpha.normal="0" />
		</s:fill>
	</s:Rect>
	
	<s:Line bottom="0" left="0" right="0">
		<s:stroke>
			<s:SolidColorStroke color="0x404045" weight="1" />
		</s:stroke>
	</s:Line>
	
	<s:Line bottom="1" left="0" right="0">
		<s:stroke>
			<s:SolidColorStroke color="0x232326" weight="1" />
		</s:stroke>
	</s:Line>
	
	<s:HGroup width="100%" verticalAlign="middle" gap="15" paddingBottom="10" paddingLeft="10" paddingRight="5" paddingTop="10">
		<s:Image id="iconImage" source.normal="{icon_normal}" source.selected="{icon_selected}" />
		<s:Label id="lblTitle" fontSize="18" text="{title}" color="0xFFFFFF" />
	</s:HGroup>
	
</s:SkinnableContainer>
