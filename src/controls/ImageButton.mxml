<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark"
		   width="100%"  xmlns:mx="library://ns.adobe.com/flex/mx" skinClass="skins.ImageButtonSkin" >
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var title : String;
			
			[Bindable]
			public var icon : Object;
			
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" verticalAlign="middle" gap="15" paddingBottom="5" paddingLeft="10" paddingRight="5" paddingTop="5">
		<s:Image id="iconImage" source="{icon}" />
		<s:Label id="lblTitle" fontSize="20" text="{title}" />
	</s:HGroup>
	
</s:SkinnableContainer>
